

html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Flight Booking Form
    link(href="(https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css)" rel="stylesheet")
    link(rel="stylesheet" href="/css/style.css")
  body
    img(src="../public/images/Header.PNG")
    .container.form-container
      form.dotted-border(methode="POST")
        .row
          .col-md-4
            .form-section
              h3 PASSENGER INFORMATION
              .mb-3
                label(for="fullName" class="form-label") Full Name *
                input(type="text" class="form-control" id="fullName" required)
                div.invalid-feedback Invalid field
              .mb-3
                label(for="gender" class="form-label") Gender *
                select(class="form-select" id="gender" required)
                  option(value="") -- Select --
                  option(value="Male") Male
                  option(value="Female") Female
                  option(value="Other") Other
                div.invalid-feedback Invalid field
              .mb-3
                label(for="dob" class="form-label") Date of Birth *
                input(type="date" class="form-control" id="dob" required)
                div.invalid-feedback Invalid field
              .mb-3
                label(for="nationality" class="form-label") Nationality *
                input(type="text" class="form-control" id="nationality" required)
                div.invalid-feedback Invalid field
          .col-md-4
            .form-section
              h3 CONTACT INFORMATION
              .mb-3
                label(for="phoneNumber" class="form-label") Phone Number *
                input(type="tel" class="form-control" id="phoneNumber" required)
                div.invalid-feedback Invalid field
              .mb-3
                label(for="emailAddress" class="form-label") Email Address *
                input(type="email" class="form-control" id="emailAddress" required)
                div.invalid-feedback Invalid field
              .mb-3
                label(for="poBox" class="form-label") P.O. BOX Number
                input(type="text" class="form-control" id="poBox")
              .mb-3
                label(for="emergencyPhone" class="form-label") Emergency Phone Number *
                input(type="tel" class="form-control" id="emergencyPhone" required)
                div.invalid-feedback Invalid field
          .col-md-4
            .form-section
              h3 FLIGHT INFORMATION
              .mb-3
                label(for="passportNumber" class="form-label") Passport Number *
                input(type="text" class="form-control" id="passportNumber" required)
                div.invalid-feedback Invalid field
              .mb-3
                label(for="visaDocument" class="form-label") Visa Document *
                input(type="file" class="form-control" id="visaDocument" required)
                div.invalid-feedback Invalid field
              .mb-3
                label(for="departureCity" class="form-label") Departure City *
                input(type="text" class="form-control" id="departureCity" required)
                div.invalid-feedback Invalid field
              .mb-3
                label(for="destinationCity" class="form-label") Destination City *
                input(type="text" class="form-control" id="destinationCity" required)
                div.invalid-feedback Invalid field
        .submit
          button(type="submit" class="btn btn-danger") SUBMIT
          Script(src='/js/form.js')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
    
